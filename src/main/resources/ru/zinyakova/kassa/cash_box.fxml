<VBox prefHeight="644.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.zinyakova.kassa.view.CashBoxController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
            <Menu mnemonicParsing="false" text="Афиша">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#selectSchedulerPn" text="Показать афишу" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Билеты">
              <items>
                <MenuItem id="showPaneBtn" fx:id="showPaneBtn" mnemonicParsing="false" onAction="#selectByTicketPn" text="Купить билет" />
                  <MenuItem id="showPaneLbl" fx:id="showPaneLbl" mnemonicParsing="false" onAction="#selectReturnTicketPn" text="Вернуть билет" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Отчеты">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
              </items>
            </Menu>
      </menus>
    </MenuBar>
      <StackPane fx:id="stackPane" alignment="TOP_LEFT" prefHeight="706.0" prefWidth="800.0">
         <children>
            <Pane fx:id="buyTicketPn" prefHeight="771.0" prefWidth="800.0" visible="false">
               <children>
                  <Label layoutX="14.0" layoutY="14.0" text="Театры" />
                  <ComboBox fx:id="theatreCmb" disable="true" layoutX="146.0" layoutY="10.0" onAction="#selectTheatre" prefHeight="25.0" prefWidth="387.0" />
                  <Label layoutX="14.0" layoutY="44.0" text="Представления" />
                  <Label layoutX="14.0" layoutY="75.0" text="Даты" />
                  <Label layoutX="14.0" layoutY="104.0" text="Категория мест" />
                  <ComboBox fx:id="performanceCmb" disable="true" layoutX="146.0" layoutY="40.0" onAction="#selectPerformance" prefHeight="25.0" prefWidth="387.0" />
                  <ComboBox fx:id="dateCmb" disable="true" layoutX="146.0" layoutY="71.0" onAction="#selectDate" prefHeight="25.0" prefWidth="387.0" />
                  <ComboBox fx:id="categorySeatCmb" disable="true" layoutX="146.0" layoutY="100.0" onAction="#selectSeatCategory" prefHeight="25.0" prefWidth="387.0" />
                  <Label layoutX="14.0" layoutY="136.0" text="Свободно мест" />
                  <Label fx:id="freeSeatsLbl" layoutX="146.0" layoutY="136.0" text="-" />
                  <Label layoutX="14.0" layoutY="171.0" text="Цена" />
                  <Label fx:id="priceLbl" layoutX="146.0" layoutY="171.0" text="-" />
                  <TextField fx:id="quantitySeatsFld" disable="true" layoutX="146.0" layoutY="207.0" onKeyTyped="#onQuantitySeatsFldFill" prefHeight="25.0" prefWidth="214.0" />
                  <Label layoutX="14.0" layoutY="211.0" text="Количество" />
                  <Button fx:id="buyBtn" disable="true" layoutX="396.0" layoutY="207.0" mnemonicParsing="false" onAction="#buyTicket" prefHeight="25.0" prefWidth="137.0" text="Добавить в чек" />
                  <Separator layoutX="14.0" layoutY="250.0" prefHeight="3.0" prefWidth="773.0" />
                  <Separator layoutX="14.0" layoutY="289.0" prefHeight="3.0" prefWidth="773.0" />
                  <Label layoutX="14.0" layoutY="264.0" text="Итого" />
                  <Label fx:id="summaryPrice" layoutX="56.0" layoutY="264.0" prefHeight="17.0" prefWidth="720.0" />
                  <ScrollPane layoutY="308.0">
                     <content>
                        <TableView fx:id="shoppingTbl" prefHeight="305.0" prefWidth="785.0">
                          <columns>
                            <TableColumn fx:id="theatreNameClmn" editable="false" prefWidth="99.0" text="Театр" />
                            <TableColumn fx:id="performanceNameClmn" editable="false" prefWidth="119.0" text="Представление" />
                              <TableColumn fx:id="dateClmn" editable="false" minWidth="8.333328247070312" prefWidth="80.6666259765625" text="Дата" />
                              <TableColumn fx:id="seatCategoryNameClmn" editable="false" prefWidth="79.33331298828125" text="Категория места" />
                              <TableColumn fx:id="quantityClmn" editable="false" prefWidth="82.0" text="Количество" />
                              <TableColumn fx:id="summClmn" editable="false" prefWidth="95.33331298828125" text="Сумма без скидки" />
                          </columns>
                        </TableView>
                     </content>
                  </ScrollPane>
                  <Button fx:id="handleShoppingBtn" layoutX="618.0" layoutY="40.0" mnemonicParsing="false" onAction="#handleShopping" prefHeight="25.0" prefWidth="129.0" text="Закрыть чек" />
               </children>
            </Pane>
            <Pane fx:id="schedulerPn" prefHeight="770.0" prefWidth="800.0">
               <children>
                  <VBox layoutX="-2.0" layoutY="-1.0" prefHeight="619.0" prefWidth="773.0">
                     <children>
                        <Pane prefHeight="57.0" prefWidth="773.0">
                           <children>
                              <Label layoutX="43.0" layoutY="16.0" prefHeight="17.0" prefWidth="144.0" text="Введите представление" />
                              <TextField fx:id="searchPlayTxtFld" layoutX="222.0" layoutY="12.0" prefHeight="25.0" prefWidth="329.0" />
                              <Button fx:id="searchPlayBtn" layoutX="629.0" layoutY="12.0" mnemonicParsing="false" onAction="#onSearchPlayBtnClick" text="Найти" />
                           </children>
                        </Pane>
                        <VBox fx:id="listPlayVbx" prefHeight="578.0" prefWidth="773.0" />
                     </children>
                  </VBox>
               </children>
            </Pane>
            <Pane fx:id="returnTicketPn" prefHeight="569.0" prefWidth="800.0" visible="false">
               <children>
                  <Label layoutX="14.0" layoutY="14.0" prefHeight="17.0" prefWidth="144.0" text="Введите номер чека" />
                  <TextField fx:id="receiptIdTxtFld" layoutX="183.0" layoutY="10.0" prefHeight="25.0" prefWidth="214.0" />
                  <Button layoutX="435.0" layoutY="10.0" mnemonicParsing="false" onAction="#searchReceipt" prefHeight="25.0" prefWidth="112.0" text="Искать" />
                  <VBox fx:id="listTicketVbx" layoutY="136.0" prefHeight="483.0" prefWidth="800.0">
                     <children>
                        <Pane prefHeight="31.0" prefWidth="800.0">
                           <children>
                              <Label layoutX="698.0" layoutY="6.0" prefHeight="17.0" prefWidth="64.0" text="К возврату" />
                              <Label layoutX="83.0" layoutY="6.0" prefHeight="17.0" prefWidth="586.0" text="Билет" />
                              <Label layoutX="14.0" layoutY="9.0" text="№ п/п" />
                           </children>
                        </Pane>
                     </children>
                  </VBox>
                  <Button layoutX="573.0" layoutY="10.0" mnemonicParsing="false" onAction="#issueReturn" prefHeight="25.0" prefWidth="129.0" text="Оформить возврат" />
                  <Label layoutX="21.0" layoutY="71.0" text="К возрату" />
                  <Label fx:id="returnSumLbl" layoutX="97.0" layoutY="71.0" prefHeight="17.0" prefWidth="537.0" text="0" />
               </children>
            </Pane>
         </children>
      </StackPane>
  </children>
</VBox>
